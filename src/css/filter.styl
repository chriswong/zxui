city-prefix = ecl-ui-filter

.{city-prefix}

    p
        margin 15px auto
        color #0000CC
    
    label
        padding 1px 5px
        border-left 1px solid #D8D8D8
        border-right 1px solid #D8D8D8
        margin-left -5px

    input
        display none

    .checked
        background #5A9FF1
        border 1px solid #418CE5
        border-radius 2px
        color #FFFFFF
        margin-left 0
        margin-right 5px
        padding 1px 0

    .disabled
        background none
        color #D8D8D8
        cursor not-allowed

    .first
        border-left: none

    .last
        border-right: none
