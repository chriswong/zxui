city-prefix = ecl-hotel-ui-city

.{city-prefix}
    width 360px
    position absolute
    z-index 1000
    border 1px solid #ddd
    background-color #fff
    padding 5px
    font-size 12px
    color #555

    a
        text-decoration none


.{city-prefix}-close
    color #B4B4B4
    font bold 12px/1.2 'Comic Sans MS'
    padding 0 3px
    position absolute
    right 3px
    top 8px

.{city-prefix}-labels
    border-top 1px dashed #ddd
    border-bottom 1px solid #ddd
    padding-top 8px
    margin-top 5px

    li
        border @border-bottom
        background-color #fff
        float left
        padding 3px 5px
        margin-right 10px
        margin-bottom -1px
        cursor default
        color #0069CA

    .{city-prefix}-active
        background-color #E8EDF1

.{city-prefix}-panels
    li
        display none
        float left
        line-height 18px

    .{city-prefix}-active
        display block

    a
        color #555
        width 70px
        float left
        padding 5px 0
        text-align center
        text-decoration none
